<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.NoteFinalStockActivity">

    <LinearLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:elevation="10dp"
        android:background="#81000010"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topBarLinearLayout"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/green">

        <ImageView
            android:id="@+id/leftArrowImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/arrow_left"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/pageNameTitleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:textColor="@color/white"
            android:layout_marginLeft="16dp"
            android:includeFontPadding="false"
            android:text="Catat satu stok akhir"/>

    </LinearLayout>

    <TextView
        android:id="@+id/bahanTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bahan"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        android:fontFamily="@font/plus_jakarta_sans_semibold"
        android:textColor="@color/grey_text"
        app:layout_constraintTop_toBottomOf="@id/topBarLinearLayout"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bahanPickerConstraintLayout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_edit_text"
        app:layout_constraintTop_toBottomOf="@id/bahanTitleTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bahanNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/plus_jakarta_sans_regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/arrowDownImageVIew"
            android:layout_marginRight="16dp"
            android:textSize="14sp"
            android:textColor="@color/grey_text"/>

        <ImageView
            android:id="@+id/arrowDownImageVIew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_down"
            android:layout_gravity="right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/stokAkhirTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bahanPickerConstraintLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:text="Stok akhir"
        android:textSize="14sp"
        android:textColor="@color/grey_text"
        android:fontFamily="@font/plus_jakarta_sans_semibold"/>

    <EditText
        android:id="@+id/stokAkhirEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_text"
        android:inputType="number"
        android:textSize="14sp"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        app:layout_constraintTop_toBottomOf="@id/stokAkhirTitleTextView"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/rounded_edit_text"/>

    <TextView
        android:id="@+id/terpakaiTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/stokAkhirEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:text="Terpakai"
        android:textSize="14sp"
        android:textColor="@color/grey_text"
        android:fontFamily="@font/plus_jakarta_sans_semibold"
        android:visibility="gone"/>

        <EditText
        android:id="@+id/terpakaiEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_text"
        android:inputType="number"
        android:textSize="14sp"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        app:layout_constraintTop_toBottomOf="@id/terpakaiTitleTextView"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/rounded_edit_text"
        android:visibility="gone"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/submitButtonCardView"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="@color/green"
        app:layout_constraintTop_toBottomOf="@id/terpakaiEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simpan Stok"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/plus_jakarta_sans_semibold"
            android:textSize="14sp" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>